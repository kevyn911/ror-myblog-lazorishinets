<h1><%= @post.title%></h1>
<p><%= sanitize @post.body%></p>

<%= form_for :postcomment, url: post_postcomments_path(post_id: @post.id) do |f| %>

<% if flash[:notice] %>
 	<div class="notice">Warning: <%= flash[:notice] %>! </div>
<% end %>

<p><%= f.label "Write Comment" %></p>
<%= f.text_area :text, cols: 10, rows: 5 %><br />

<p><%= f.submit "Send"%></p>

<hr>
<% @comments.each do |comment|%>
<p>User <b style="color: #6959CD"><%= comment.user.nickname %></b> write: </p>
<%= comment.text %>
<hr>
<% end %>

<%end%>


